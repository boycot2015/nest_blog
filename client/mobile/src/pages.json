{
	"pages": [
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "博客首页",
				"enablePullDownRefresh": true,
				"titleNView": false,
				"app-plus": {
					"pullToRefresh": {
						"support": true,
						"color": "#ff3333",
						"style": "default",
						"contentdown": {
							"caption": "下拉可刷新"
						},
						"contentover": {
							"caption": "释放可刷新"
						},
						"contentrefresh": {
							"caption": "正在刷新"
						}
					}
				}
			}
		}
	    ,{
            "path" : "pages/userCenter/userCenter",
            "style" : {
				"navigationBarTitleText": "个人中心",
				"titleNView": false,
				"enablePullDownRefresh": true
			}
		}
		,{
            "path" : "pages/article/index",
            "style" : {
				"navigationBarTitleText": "博客列表",
				"titleNView": false,
				"enablePullDownRefresh": true
			}
		}
		,{
            "path" : "pages/article/view",
            "style" : {
				"navigationBarTitleText": "详情",
				"enablePullDownRefresh": true
			}
        }
        ,{
            "path" : "pages/category/category",
            "style" : {
				// "titleNView": false,
				"navigationBarTitleText": "分类"
			}
        },{
            "path" : "pages/webview",
            "style" : {
				"titleNView": false,
				"navigationBarTitleText": "web-view"
			}
        }
        ,{
            "path" : "pages/login/login",
            "style" : {
				"titleNView": false
			}
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
	    "color": "#7A7E83",
	    "selectedColor": "#FFA7C5",
	    "borderStyle": "black",
	    "backgroundColor": "#ffffff",
	    "list": [{
	        "pagePath": "pages/index/index",
	        "iconPath": "/static/index-0.png",
	        "selectedIconPath": "/static/index-1.png",
	        "text": "首页"
	    }, {
	        "pagePath": "pages/article/index",
	        "iconPath": "/static/hot-0.png",
	        "selectedIconPath": "/static/hot-1.png",
	        "text": "列表"
	    }, {
	        "pagePath": "pages/category/category",
	        "iconPath": "/static/tag-0.png",
	        "selectedIconPath": "/static/tag-1.png",
	        "text": "分类"
	    }, {
	        "pagePath": "pages/userCenter/userCenter",
	        "iconPath": "/static/center-0.png",
	        "selectedIconPath": "/static/center-1.png",
	        "text": "我的"
	    }]
	},
	"easycom": {
		 "autoscan": true,
		 "custom": {
			"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue",
			"uni-(.*)": "@/components/uni-$1/uni-$1.vue" // 匹配components目录内的vue文件
		 }
	}
}
